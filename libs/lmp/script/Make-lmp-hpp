set -e

rootDir="../../.."

echo "#ifndef BOOST_LMP_HPP_VK_20043010
#define BOOST_LMP_HPP_VK_20043010

// (C) Copyright Vesa Karvonen 2005.
//
// Distributed under the Boost Software License, Version 1.0.
// (See accompanying file LICENSE.)

// NOTE: This header is generated by the $(basename $0) -script.

$(find "$rootDir/boost/lmp/" -name '*.hpp' -a -not -name 'Template.hpp' -a -not -path '*/detail/*' | sed -e "s|^$rootDir/|#include \"|g" -e 's|$|"|g' | sort)

#endif" > "$rootDir/boost/lmp.hpp"
